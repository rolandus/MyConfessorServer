<%= form_for(@user_account, html: { class: "form-horizontal", role: "form" } ) do |f| %>
  <% if @user_account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_account.errors.count, "error") %> prohibited this user_account from being saved:</h2>

      <ul>
      <% @user_account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :first_name, "First name", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :last_name, "Last name", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :home_phone, "Home phone", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= f.text_field :home_phone, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :work_phone, "Work phone", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= f.text_field :work_phone, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :mobile_phone, "Mobile phone", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= f.text_field :mobile_phone, class: "form-control" %>
    </div>
  </div>
  <% if @edit_mode == :edit %>
  <div class="field form-group">
    <%= f.label :account_status, "Status", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= collection_radio_buttons(:user_account, :account_status_id, AccountStatus.all, :id, :name)%>
    </div>
  </div>
  <% end %>
  <div class="field form-group">
    <%= f.label :account_roles, "Roles", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= collection_check_boxes(:user_account, :account_role_ids, AccountRole.all, :id, :name)%>
    </div>
  </div>
  <% if @edit_mode == :new %>
  <div class="field form-group">
    <%= f.label :email, "Email", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :password, "Password", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <% end %>
  
  <h3>Confessor Info</h3>
  <div class="field form-group">
    <%= f.label :confessor_office, "Office", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= collection_radio_buttons(:confessor, :confessor_office_id, ConfessorOffice.all, :id, :name)%>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :diocese, "Diocese", class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= collection_select(:confessor, :diocese_id, Diocese.all, :id, :name, :include_blank => true)%>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :salutation, "Salutation", class: "col-sm-2 control-label"  %>
    <%#= f.text_field object: :confessor, method: :salutation %>
    <div class="col-sm-10">
    	<input id="confessor_salutation" name="confessor[salutation]" type="text" class="form-control" />
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :biography, class: "col-sm-2 control-label"  %>
    <%#= f.text_area :biography %>
    <div class="col-sm-10">
    	<textarea id="confessor_biography" name="confessor[biography]"  class="form-control"></textarea>
    </div>
  </div>

  <% if @edit_mode == :edit %>
  <div class="field form-group">
    <%= label :user_account_change, :change_comments, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    	<%= text_area :user_account_change, :change_comments, class: "form-control" %>
    </div>
  </div>
  <% end%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
