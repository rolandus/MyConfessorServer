<%= form_for(@user_account) do |f| %>
  <% if @user_account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_account.errors.count, "error") %> prohibited this user_account from being saved:</h2>

      <ul>
      <% @user_account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :account_status %><br>
    <%= collection_select(:user_account, :account_status_id, AccountStatus.all, :id, :name)%>
  </div>
  <div class="field">
    <%= f.label :account_roles %><br>
    <%= collection_check_boxes(:user_account, :account_role_ids, AccountRole.all, :id, :name)%>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :home_phone %><br>
    <%= f.text_field :home_phone %>
  </div>
  <div class="field">
    <%= f.label :work_phone %><br>
    <%= f.text_field :work_phone %>
  </div>
  <div class="field">
    <%= f.label :mobile_phone %><br>
    <%= f.text_field :mobile_phone %>
  </div>

  <% if @is_edit %>
  <div class="field">
    <%= label :user_account_change, :change_comments %><br>
    <%= text_area :user_account_change, :change_comments %>
  </div>
  <% end%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
