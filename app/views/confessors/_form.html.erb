<%= form_for(@confessor) do |f| %>
  <% if @confessor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@confessor.errors.count, "error") %> prohibited this confessor from being saved:</h2>

      <ul>
      <% @confessor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
