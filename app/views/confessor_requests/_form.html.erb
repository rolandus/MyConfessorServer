<%= form_for(@confessor_request, html: { class: "form-horizontal", role: "form" } ) do |f| %>

	<% if @confessor_request.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@confessor_request.errors.count, "error") %> prohibited this confessor_request from being saved:</h2>
			<ul>
				<% @confessor_request.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="field form-group">
		<%= f.label :first_name, "First name", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :first_name, class: "form-control" %>
		</div>
	</div>
	<div class="field form-group">
		<%= f.label :last_name, "Last name", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :last_name, class: "form-control"  %>
		</div>
	</div>	
	<div class="field form-group">
		<%= f.label :diocese, "Diocese", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= collection_select(:confessor_request, :diocese_id, Diocese.all, :id, :name, { include_blank: '' }, { class: "form-control" })%>
		</div>
	</div>
	<div class="field form-group">
		<%= f.label :email, "Email", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :email, class: "form-control", type: "email"  %>
		</div>
	</div>	
	<% if @is_approval %>
		<div class="field form-group">
			<%= f.label :comments, "Comments", class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<%= f.text_area :comments, class: "form-control"  %>
			</div>
		</div>	
	<% end %>
	<div class="actions form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<% if @is_approval %>
				<%= f.submit 'Pend', class: "btn btn-default" %>
				<%= f.submit 'Drop', class: "btn btn-warning" %>
				<%= f.submit 'Deny', class: "btn btn-danger" %>
				<%= f.submit 'Approve', class: "btn btn-primary" %>
			<% else %>
				<%= f.submit 'Submit Request', class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>	
<% end %>




