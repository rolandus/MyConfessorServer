			<ul>
				<% @confessor_request.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
			</div>
	<% end %>
	  
	<% if @edit_mode == 'create' %>
		<div class="field">
			<%= f.label :first_name, "First name" %><br>
			<%= f.text_field :first_name %>
		</div>
		<div class="field">
			<%= f.label :last_name, "Last name" %><br>
			<%= f.text_field :last_name %>
		</div>
	<% end %>
	
	<div class="field">
		<%= f.label :diocese, "Diocese" %><br>
		<%= collection_select(:confessor_request, :diocese_id, Diocese.all, :id, :name)%>
	</div>

	<div class="field">
		<%= f.label :email, "Email" %><br>
		<%= f.text_field :email %>
	</div>
	
	<div class="field">
		<%= f.label :confessor_request_status, "Status" %><br />
		<%= collection_radio_buttons(:confessor_request, :confessor_request_status_id, ConfessorRequestStatus.all, :id, :name) %>
	</div>
	
	<div class="actions">
		<% if @edit_mode == 'create' %>
			<%= f.submit 'Submit Request' %>
		<% else %>
			<%= f.submit 'Save' %>
		<% end %>
	</div>	
<% end %>


